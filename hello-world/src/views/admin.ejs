<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Painel de Administração</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        h1 {
            color: #333;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid #ddd;
        }
        th, td {
            padding: 8px;
            text-align: left;
        }
        .actions {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <!-- Exibe o nome do administrador logado -->
    <h1>Painel de Administração</h1>

    <h2>Gerenciar Usuários</h2>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Nome Completo</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <!-- Lista todos os usuários -->
            <% usuarios.forEach(user => { %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.username %></td>
                    <td><%= user.fullname %></td>
                    <td>
                        <a href="/usuarios/editar/<%= user.id %>">Editar</a>
                        <a href="/usuarios/excluir/<%= user.id %>">Excluir</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
