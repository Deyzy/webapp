<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Painel de Administração</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        h1 {
            color: #333;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid #ddd;
        }
        th, td {
            padding: 8px;
            text-align: left;
        }
        .actions {
            margin-top: 20px;
        }
        .btn {
            padding: 5px 10px;
            margin: 2px;
            border: none;
            cursor: pointer;
            color: white;
            border-radius: 3px;
        }
        .btn-edit {
            background-color: #4CAF50;
        }
        .btn-delete {
            background-color: #f44336;
        }
    </style>
</head>
<body>
    
    <h1>Painel de Administração</h1>

    <h2>Gerenciar Usuários</h2>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Nome Completo</th>
                <th>CPF</th>
                <th>Telefone</th>
                <th>Endereço</th>
                <th>Data de Nascimento</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            
            <% usuarios.forEach(user => { %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.username %></td>
                    <td><%= user.fullname %></td>
                    <td><%= user.cpf %></td>
                    <td><%= user.phonenumber %></td>
                    <td><%= user.address %></td>
                    <td><%= user.dateofbirth %></td>
                    <td>
                        
                        <form action="/usuarios/editar/<%= user.id %>" method="GET" style="display: inline;">
                            <button type="submit" class="btn btn-edit">Editar</button>
                        </form>
                        
                        <form action="/usuarios/excluir/<%= user.id %>" method="POST" style="display: inline;">
                            <button type="submit" class="btn btn-delete">Excluir</button>
                        </form>
                    </td>
                    
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
